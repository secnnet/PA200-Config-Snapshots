<config>
    <devices>
        <!-- Replace 'device1' with your Palo Alto Networks device name -->
        <entry name="device1">
            <vsys>
                <!-- Replace 'vsys1' with the name of your virtual system (vsys) -->
                <entry name="vsys1">
                    <rulebase>
                        <pbf>
                            <rules>
                                <!-- Replace 'PBF-Rule1' with a name for the PBF rule -->
                                <entry name="PBF-Rule1">
                                    <from>
                                        <!-- Replace 'source_zone' with the source zone for the traffic -->
                                        <member>source_zone</member>
                                    </from>
                                    <source-user>
                                        <!-- Replace 'any' with a specific source user if desired -->
                                        <member>any</member>
                                    </source-user>
                                    <source>
                                        <!-- Replace 'source_address' with the source IP address or address group -->
                                        <member>source_address</member>
                                    </source>
                                    <to>
                                        <!-- Replace 'destination_zone' with the destination zone for the traffic -->
                                        <member>destination_zone</member>
                                    </to>
                                    <destination>
                                        <!-- Replace 'destination_address' with the destination IP address or address group -->
                                        <member>destination_address</member>
                                    </destination>
                                    <service>
                                        <!-- Replace 'service_name' with the service (protocol and port) for the traffic -->
                                        <member>service_name</member>
                                    </service>
                                    <action>
                                        <forward>
                                            <!-- Replace 'interface_name' with the name of the interface for forwarding the traffic -->
                                            <member>interface_name</member>
                                        </forward>
                                    </action>
                                </entry>
                            </rules>
                        </pbf>
                    </rulebase>
                </entry>
            </vsys>
        </entry>
    </devices>
</config>
