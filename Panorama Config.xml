<!-- Panorama Configuration -->

<config>
  <!-- Define device group -->
  <devices>
    <entry name="DeviceGroup">
      <!-- Add firewall to device group -->
      <devices>
        <entry name="Firewall">
          <!-- Configure shared settings for firewall -->
          <network>
            <!-- Define management interface settings -->
            <interface>
              <management-profile>management</management-profile>
            </interface>
          </network>
          <templates>
            <!-- Apply template to firewall -->
            <entry name="Template">
              <template-stack>
                <template>
                  <!-- Configure security policies -->
                  <config>
                    <security>
                      <!-- Create security policies -->
                      <rules>
                        <!-- Add rule allowing traffic from trust zone to untrust zone -->
                        <entry name="Allow Trust to Untrust">
                          <from>
                            <member>trust-zone</member>
                          </from>
                          <to>
                            <member>untrust-zone</member>
                          </to>
                          <source>
                            <member>trust-network</member>
                          </source>
                          <destination>
                            <member>untrust-network</member>
                          </destination>
                          <application>
                            <member>any</member>
                          </application>
                          <action>allow</action>
                        </entry>
                        <!-- Add rule denying traffic from untrust zone to trust zone -->
                        <entry name="Deny Untrust to Trust">
                          <from>
                            <member>untrust-zone</member>
                          </from>
                          <to>
                            <member>trust-zone</member>
                          </to>
                          <source>
                            <member>untrust-network</member>
                          </source>
                          <destination>
                            <member>trust-network</member>
                          </destination>
                          <application>
                            <member>any</member>
                          </application>
                          <action>deny</action>
                        </entry>
                      </rules>
                    </security>
                  </config>
                </template>
              </template-stack>
            </entry>
          </templates>
        </entry>
      </devices>
    </entry>
  </devices>
</config>
