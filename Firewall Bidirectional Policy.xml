<config>
    <security>
        <rules>
            <entry name="Bidirectional Policy Rule">
                <!-- Enter a descriptive name for the policy -->
                <from>
                    <!-- Specify the source zone(s) from which the traffic originates -->
                    <member>source-zone</member>
                </from>
                <source>
                    <!-- Specify the source IP address or address object -->
                    <member>source-address</member>
                </source>
                <to>
                    <!-- Specify the destination zone(s) to which the traffic is destined -->
                    <member>destination-zone</member>
                </to>
                <destination>
                    <!-- Specify the destination IP address or address object -->
                    <member>destination-address</member>
                </destination>
                <service>
                    <!-- Define the service or application that the policy will allow or deny -->
                    <member>service</member>
                </service>
                <action>
                    <!-- Choose an action for the policy (allow, deny, or any other action you require) -->
                    <allow/>
                </action>
                <options>
                    <bidirectional>
                        <!-- Enable bidirectional -->
                        <enabled>yes</enabled>
                    </bidirectional>
                </options>
                <log-setting>
                    <!-- Configure the logging options as needed -->
                    <member>log-setting</member>
                </log-setting>
            </entry>
        </rules>
    </security>
</config>
