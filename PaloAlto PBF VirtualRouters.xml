<!-- Virtual Router Configuration -->
<virtual-router>
  <name>VR-Internal</name> <!-- Create a virtual router for internal traffic -->
  <!-- Configure routing entries for VR-Internal -->
  <routing-table>
    <ip>
      <static-route>
        <destination>0.0.0.0/0</destination> <!-- Destination network -->
        <interface>ethernet1/1</interface> <!-- Next hop interface -->
      </static-route>
      <!-- Add additional static routes as needed -->
    </ip>
  </routing-table>
</virtual-router>

<virtual-router>
  <name>VR-Guest</name> <!-- Create a virtual router for guest traffic -->
  <!-- Configure routing entries for VR-Guest -->
  <routing-table>
    <ip>
      <static-route>
        <destination>0.0.0.0/0</destination> <!-- Destination network -->
        <interface>ethernet1/2</interface> <!-- Next hop interface -->
      </static-route>
      <!-- Add additional static routes as needed -->
    </ip>
  </routing-table>
</virtual-router>

<!-- Policy-Based Forwarding Configuration -->
<policy-based-forwarding>
  <rules>
    <rule>
      <from>
        <zone>Trust</zone> <!-- Source zone -->
        <source>192.168.1.0/24</source> <!-- Source address -->
      </from>
      <to>
        <zone>Untrust</zone> <!-- Destination zone -->
        <destination>0.0.0.0/0</destination> <!-- Destination address -->
      </to>
      <action>vr-router</action> <!-- Forwarding action -->
      <forwarding-router>VR-Internal</forwarding-router> <!-- Virtual router -->
    </rule>
    <rule>
      <from>
        <zone>Guest</zone> <!-- Source zone -->
        <source>192.168.2.0/24</source> <!-- Source address -->
      </from>
      <to>
        <zone>Untrust</zone> <!-- Destination zone -->
        <destination>0.0.0.0/0</destination> <!-- Destination address -->
      </to>
      <action>vr-router</action> <!-- Forwarding action -->
      <forwarding-router>VR-Guest</forwarding-router> <!-- Virtual router -->
    </rule>
    <!-- Add additional PBF rules as needed -->
  </rules>
</policy-based-forwarding>
